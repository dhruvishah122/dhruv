<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title>Popup Login Form Design | CodingNepal</title>
      <link rel="stylesheet" href="/css/Student_login.css" type="text/css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
   </head>
   <body>
      <div class="center">
         <input type="checkbox" id="show">
         <label for="show" class="show-btn">View Form</label>
         <div class="container">
            <label for="show" class="close-btn fas fa-times" title="close"></label>
            <div class="text">
               See Attendance
            </div>
            <form action="/show" method="post">
               <div class="data">
                  <label>Enrollment_no</label>
                  <input type="text" name="enroll" required>
               </div>
               <div class="data">
                  <label>sem</label>
                  <input type="text" name="sem" required>
               </div>
               <div class="forgot-pass">
                  <a href="#">Forgot Password?</a>
               </div>
               <div class="btn">
                  <div class="inner"></div>
                  <button type="submit">Show my Attendance</button>
               </div>
               <!-- <div class="signup-link">
                  Not a member? <a href="/user">Signup now</a>
               </div> -->
            </form>
         </div>
      </div>
   </body>
</html>